doctype html
html
	head
		title #{title} | MailNaut
		link(rel='stylesheet', href='/css/fontello.css')
		link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Open+Sans:400,300')
		link(rel='stylesheet', href='/css/style.css')
	body
		header.home
			nav
				.wrapper
					a(href="/").icon-home About
					a(href="https://github.com/DocWatson/mailnaut").icon-github View on Github
			.wrapper
				img(src="/images/logo.png", alt="MailNaut Loves You")
				h1 MailNaut
			nav.cols-3
				div.section
					a(href="/plaintext")
						i.icon-doc-text-inv
						span Generate Text Version
				div.section
					a(href="/utm")
						i.icon-rocket
						span Insert UTM Values
				div.section
					a(href="/linkcheck")
						i.icon-ok
						span Check Links
		main.wrapper
			#main
				yield

		include ../includes/footer



